<h1>Coffee Comments</h1>
<form action='posts' method="GET">
  <label>게시글 검색</label>
  <input type="text" name="search">
  <input type="submit" value="검색" class="btn btn-primary">
</form>
<div class="table-responsive">
<table class="table table-fit">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Email</th>
      <th>Likes</th>
      <th>좋아요 갯수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= content_tag(:div, post.content.html_safe, :class => "panel-body") %></td>
        <td><%= post.user.email %></td>
        <td><%= post.likes.size %> 명이 좋아합니다.
        <% if current_user.is_like?(post) %>
          <%= link_to "좋아요 취소", post_like_path(post), method: "post" %>
        <% else %>
          <%= link_to "좋아요", post_like_path(post), method: "post" %>
        <% end %>
        </td>
        <td><%= post.likes.count %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user == post.user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>
<%#= paginate @posts %>
<br>

<p><%= link_to '새 리뷰 작성', new_post_path %></p>
<%= link_to '전체 리뷰 보기', posts_path %>
</div>
